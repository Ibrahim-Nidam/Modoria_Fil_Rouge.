<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd">

    <changeSet id="018-create-wishlist-items-table" author="modoria-dev">
        <createTable tableName="wishlist_items">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_wishlist_user" references="users(id)"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_wishlist_product" references="products(id)"/>
            </column>
            <column name="product_variant_id" type="BIGINT">
                <constraints foreignKeyName="fk_wishlist_variant" references="product_variants(id)"/>
            </column>

            <column name="created_at" type="DATETIME"/>
            <column name="updated_at" type="DATETIME"/>
            <column name="created_by" type="VARCHAR(50)"/>
            <column name="updated_by" type="VARCHAR(50)"/>
            <column name="version" type="BIGINT" defaultValueNumeric="0"/>
        </createTable>

        <createIndex tableName="wishlist_items" indexName="idx_wishlist_user">
            <column name="user_id"/>
        </createIndex>

        <addUniqueConstraint 
            tableName="wishlist_items" 
            columnNames="user_id, product_id, product_variant_id" 
            constraintName="uk_wishlist_user_product_variant"/>
    </changeSet>

</databaseChangeLog>
