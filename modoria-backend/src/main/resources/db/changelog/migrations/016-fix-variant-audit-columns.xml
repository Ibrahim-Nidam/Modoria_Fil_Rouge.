<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd">

    <changeSet id="016-rename-last-modified-by-to-updated-by" author="modoria-dev">
        <renameColumn tableName="product_variants" oldColumnName="last_modified_by" newColumnName="updated_by" columnDataType="VARCHAR(50)"/>
        <!-- Check if version column is missing too? Error only mentioned updated_by. 014 didn't have version column. -->
        <addColumn tableName="product_variants">
            <column name="version" type="BIGINT" defaultValueNumeric="0"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>
