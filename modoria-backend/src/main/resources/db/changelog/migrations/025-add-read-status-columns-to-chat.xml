<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd">

    <changeSet id="025-add-read-status-columns-to-chat" author="modoria">
        <addColumn tableName="chat_rooms">
            <column name="is_read_by_customer" type="BOOLEAN" defaultValueBoolean="true">
                 <constraints nullable="false"/>
            </column>
            <column name="is_read_by_support" type="BOOLEAN" defaultValueBoolean="false">
                 <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
