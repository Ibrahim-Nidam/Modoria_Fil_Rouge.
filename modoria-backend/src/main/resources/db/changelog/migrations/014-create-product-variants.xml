<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd">

    <changeSet id="014-create-product-variants-table" author="modoria-dev">
        <createTable tableName="product_variants">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_variant_product" references="products(id)"/>
            </column>
            <column name="sku" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="color" type="VARCHAR(50)"/>
            <column name="size" type="VARCHAR(10)"/>
            <column name="inventory_quantity" type="INT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="DECIMAL(10, 2)"/>
            
            <column name="created_at" type="DATETIME"/>
            <column name="updated_at" type="DATETIME"/>
            <column name="created_by" type="VARCHAR(50)"/>
            <column name="last_modified_by" type="VARCHAR(50)"/>
        </createTable>

        <createIndex tableName="product_variants" indexName="idx_variant_product">
            <column name="product_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
