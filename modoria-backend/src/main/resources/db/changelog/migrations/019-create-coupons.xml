<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd">

    <changeSet id="019-create-coupons-table" author="modoria-dev">
        <createTable tableName="coupons">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="discount_type" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="discount_value" type="DECIMAL(10, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="min_order_amount" type="DECIMAL(10, 2)"/>
            <column name="expiry_date" type="DATETIME"/>
            <column name="usage_limit" type="INT"/>
            <column name="usage_count" type="INT" defaultValueNumeric="0"/>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="DATETIME"/>
            <column name="updated_at" type="DATETIME"/>
            <column name="created_by" type="VARCHAR(50)"/>
            <column name="updated_by" type="VARCHAR(50)"/>
            <column name="version" type="BIGINT" defaultValueNumeric="0"/>
        </createTable>

        <createIndex tableName="coupons" indexName="idx_coupon_code">
            <column name="code"/>
        </createIndex>
    </changeSet>

    <changeSet id="019-add-coupon-code-to-orders" author="modoria-dev">
        <addColumn tableName="orders">
            <column name="applied_coupon_code" type="VARCHAR(50)"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>
