<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- ===========================================
         Modoria Backend - Logging Configuration
         =========================================== -->

    <!-- Properties -->
    <property name="LOG_DIR" value="./logs"/>
    <property name="LOG_FILE" value="modoria-backend"/>
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>
    <property name="FILE_LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{userId:-system}] %logger{50} - %msg%n"/>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- ===========================================
         Application Log - Main log file
         =========================================== -->
    <appender name="APP_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/application/application-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- ===========================================
         Authentication Log
         =========================================== -->
    <appender name="AUTH_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/auth/auth-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>25MB</maxFileSize>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- ===========================================
         Order Log
         =========================================== -->
    <appender name="ORDER_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/order/order-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>25MB</maxFileSize>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- ===========================================
         Payment Log
         =========================================== -->
    <appender name="PAYMENT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/payment/payment-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>25MB</maxFileSize>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- ===========================================
         Product Log
         =========================================== -->
    <appender name="PRODUCT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/product/product-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>25MB</maxFileSize>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- ===========================================
         User Log
         =========================================== -->
    <appender name="USER_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/user/user-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>25MB</maxFileSize>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- ===========================================
         Cart Log
         =========================================== -->
    <appender name="CART_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/cart/cart-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>25MB</maxFileSize>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- ===========================================
         Category Log
         =========================================== -->
    <appender name="CATEGORY_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/category/category-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>25MB</maxFileSize>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- ===========================================
         Coupon Log
         =========================================== -->
    <appender name="COUPON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/coupon/coupon-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>25MB</maxFileSize>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- ===========================================
         Review Log
         =========================================== -->
    <appender name="REVIEW_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/review/review-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>25MB</maxFileSize>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- ===========================================
         Wishlist Log
         =========================================== -->
    <appender name="WISHLIST_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/wishlist/wishlist-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>25MB</maxFileSize>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- ===========================================
         Notification Log
         =========================================== -->
    <appender name="NOTIFICATION_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/notification/notification-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>25MB</maxFileSize>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- ===========================================
         Chat Log
         =========================================== -->
    <appender name="CHAT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/chat/chat-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>25MB</maxFileSize>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- ===========================================
         AI Log
         =========================================== -->
    <appender name="AI_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/ai/ai-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>25MB</maxFileSize>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- ===========================================
         Season Log
         =========================================== -->
    <appender name="SEASON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/season/season-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>25MB</maxFileSize>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- ===========================================
         Admin Log
         =========================================== -->
    <appender name="ADMIN_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/admin/admin-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>25MB</maxFileSize>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- ===========================================
         Security Log
         =========================================== -->
    <appender name="SECURITY_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/security/security-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>25MB</maxFileSize>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- ===========================================
         Error Log - All ERROR level logs
         =========================================== -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/error/error-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>25MB</maxFileSize>
            <maxHistory>60</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- ===========================================
         Logger Configurations - Domain Loggers
         =========================================== -->

    <!-- Auth Domain -->
    <logger name="com.modoria.domain.auth" level="INFO" additivity="true">
        <appender-ref ref="AUTH_FILE"/>
    </logger>

    <!-- Order Domain -->
    <logger name="com.modoria.domain.order" level="INFO" additivity="true">
        <appender-ref ref="ORDER_FILE"/>
    </logger>

    <!-- Payment Domain -->
    <logger name="com.modoria.domain.payment" level="INFO" additivity="true">
        <appender-ref ref="PAYMENT_FILE"/>
    </logger>

    <!-- Product Domain -->
    <logger name="com.modoria.domain.product" level="INFO" additivity="true">
        <appender-ref ref="PRODUCT_FILE"/>
    </logger>

    <!-- User Domain -->
    <logger name="com.modoria.domain.user" level="INFO" additivity="true">
        <appender-ref ref="USER_FILE"/>
    </logger>

    <!-- Cart Domain -->
    <logger name="com.modoria.domain.cart" level="INFO" additivity="true">
        <appender-ref ref="CART_FILE"/>
    </logger>

    <!-- Category Domain -->
    <logger name="com.modoria.domain.category" level="INFO" additivity="true">
        <appender-ref ref="CATEGORY_FILE"/>
    </logger>

    <!-- Coupon Domain -->
    <logger name="com.modoria.domain.coupon" level="INFO" additivity="true">
        <appender-ref ref="COUPON_FILE"/>
    </logger>

    <!-- Review Domain -->
    <logger name="com.modoria.domain.review" level="INFO" additivity="true">
        <appender-ref ref="REVIEW_FILE"/>
    </logger>

    <!-- Wishlist Domain -->
    <logger name="com.modoria.domain.wishlist" level="INFO" additivity="true">
        <appender-ref ref="WISHLIST_FILE"/>
    </logger>

    <!-- Notification Domain -->
    <logger name="com.modoria.domain.notification" level="INFO" additivity="true">
        <appender-ref ref="NOTIFICATION_FILE"/>
    </logger>

    <!-- Chat Domain -->
    <logger name="com.modoria.domain.chat" level="INFO" additivity="true">
        <appender-ref ref="CHAT_FILE"/>
    </logger>

    <!-- AI Domain -->
    <logger name="com.modoria.domain.ai" level="INFO" additivity="true">
        <appender-ref ref="AI_FILE"/>
    </logger>

    <!-- Season Domain -->
    <logger name="com.modoria.domain.season" level="INFO" additivity="true">
        <appender-ref ref="SEASON_FILE"/>
    </logger>

    <!-- Admin Domain -->
    <logger name="com.modoria.domain.admin" level="INFO" additivity="true">
        <appender-ref ref="ADMIN_FILE"/>
    </logger>

    <!-- Security Infrastructure -->
    <logger name="com.modoria.infrastructure.security" level="INFO" additivity="true">
        <appender-ref ref="SECURITY_FILE"/>
    </logger>
    <logger name="org.springframework.security" level="WARN" additivity="true">
        <appender-ref ref="SECURITY_FILE"/>
    </logger>

    <!-- ===========================================
         Root Logger
         =========================================== -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="APP_FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </root>

</configuration>
